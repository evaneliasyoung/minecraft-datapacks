{
  "name": "minecraft-datapacks",
  "version": "0.0.1-alpha.1",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "bun run prepare && bun run sync && bun run index.ts",
    "clean": "bun run scripts/clean.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gen": "bun run scripts/generate.ts",
    "lint": "bun run format:check && eslint src",
    "prepare": "bun run scripts/download-version-manifest.ts",
    "sync": "bun run scripts/sync.ts"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": [
        "error",
        {
          "ignoreRestArgs": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_$"
        }
      ]
    },
    "root": true
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "commander": "^12.1.0",
    "semver": "^7.6.3",
    "zip-stream": "^6.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/archiver": "^6.0.2",
    "@types/bun": "latest",
    "@types/commander": "^2.12.2",
    "@types/semver": "^7.5.8",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "mcpacker": {}
}
